# =====================================================
# SPORTIVA E-COMMERCE - VARIABLES DE ENTORNO
# Backend Configuration
# =====================================================

# ============================================
# SERVIDOR
# ============================================
NODE_ENV=development
PORT=3000

# ============================================
# BASE DE DATOS MYSQL/MARIADB
# ============================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=sportiva_db

# ============================================
# JWT AUTHENTICATION
# ============================================
JWT_SECRET=sportiva_jwt_secret_key_2025_super_secure_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=sportiva_refresh_token_secret_key_2025_ultra_secure
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# BCRYPT
# ============================================
BCRYPT_SALT_ROUNDS=10

# ============================================
# CORS - CONFIGURACIÃ“N FRONTEND
# ============================================
CORS_ORIGIN=http://localhost:5500,http://127.0.0.1:5500,http://localhost:3000
FRONTEND_URL=http://127.0.0.1:5500

# ============================================
# NEGOCIO
# ============================================
IGV=0.18
COSTO_ENVIO_LIMA=15.00
COSTO_ENVIO_PROVINCIAS=25.00
MONEDA=S/
ENVIO_GRATIS_MINIMO=200.00

# ============================================
# EMAIL (OPCIONAL - PARA FUTURO)
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@sportiva.com

# ============================================
# UPLOADS
# ============================================
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/jpg

# ============================================
# LOGS
# ============================================
LOG_LEVEL=info
LOG_FILE=logs/sportiva.log

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# SESSION
# ============================================
SESSION_SECRET=sportiva_session_secret_2025
SESSION_EXPIRATION_DAYS=7